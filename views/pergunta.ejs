<%- include('partials/header') -%>

<body>
    <div class="container">
        <div class="TituloPerguntas">
            <a class="navbar-brand" href="/">
                <div id="liveAlertPlaceholder">
                    <button class="custom-btn btn-12 btn"><span>Menu Principal</span><span>Voltar</span></button>
                </div>
            </a>
        </div>

        <div class="container">
            <hr>
            <div class="card">
                <div class="card-body">
                    <h1><%= pergunta.titulo %></h1>
                </div>
                <div class="card-footer">
                    <p><%= pergunta.descricao %></p>
                </div>
            </div>
            <hr>
            <form method="POST" action="/responder">
                <h3>Responda</h3>
                <label>Resposta</label>
                <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button class="btn btn-outline-dark">Responder</button>
            </form>
            <hr>
            <h3>Respostas</h3>
            <hr>
            <% respostas.forEach(resposta => {%>
                <br>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo %></p>
                        <br>
                        <!-- <p><%= resposta.createdAt %></p> -->
                    </div>
                </div>
            <% }) %>
        </div>
        <br>
</body>
<%- include('partials/footer') -%>